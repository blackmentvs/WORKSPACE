{
    "manifest_version": 3,
    "name": "AutoNettruyen",
    "description": "Tự động đọc truyện",
    "version": "0.0.1",
    "content_scripts": [{
        "matches": ["https://*/*"],
        "js": ["content.js"]
    }],
    "background": {
        "service_worker": "background.js"
    },
    "browser_action": {
        "default_title": "Sử Dụng Ex",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab"]
}